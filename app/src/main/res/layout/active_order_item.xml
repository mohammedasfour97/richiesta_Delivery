<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <ImageButton
                    android:id="@+id/AO_item_IB_expand_colisap"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/transparent"
                    android:src="@drawable/baseline_keyboard_arrow_up_black_24"
                    android:tint="@color/colorAccent"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/AO_item_IB_expand_colisap"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:gravity="end"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/AO_item_TV_BranchName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:gravity="start"
                        android:fontFamily="@font/cairobold"
                        android:text="KFC"
                        />
                    <TextView
                        android:id="@+id/AO_item_TV_Total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:gravity="start"
                        android:text="اجمالي : 163.99 SAR"
                        android:fontFamily="@font/cairobold"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <Button
                            android:id="@+id/AO_item_BTN_PickedUP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairobold"
                            android:text="التقط"
                            />
                        <Button
                            android:id="@+id/AO_item_BTN_Navigate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairobold"
                            android:text="الطريق"
                            />
                        <Button
                            android:id="@+id/AO_item_BTN_call"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairobold"
                            android:text="اتصل"
                            />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/AO_item_BTN_saveproblem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairobold"
                        android:text="حفظ"
                        />
                    <EditText
                        android:id="@+id/AO_item_ET_pickedProblem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/White"
                        android:textColor="@color/White"
                        android:textColorHint="@color/darkgray"
                        android:hint="لماذا لا يمكن التقاطها !"
                        android:fontFamily="@font/cairoregular"
                        />

                </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/cairoregular"
                        android:text="  ^   إذا التقطت يمكنك تركها فارغة"
                        />


                </LinearLayout>



            </RelativeLayout>
            <LinearLayout
                android:id="@+id/AO_item_RL_ShowDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/AO_item_TV_itemDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightgray"
                    android:padding="10dp"
                    android:fontFamily="@font/cairoregular"
                    android:text="Product : Smart Box - QTY : 1 \n\nProduct : Smart Box - QTY : 1 \n\nProduct : Smart Box - QTY : 1 "
                    />


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>