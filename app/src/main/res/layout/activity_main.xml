<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/lightgray">

        <ImageButton
            android:id="@+id/MainActivity_Refresh"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="@color/transparent"
            android:src="@drawable/baseline_repeat_black_24"
            android:tint="@color/colorPrimary"
            />

        <ImageButton
            android:id="@+id/MainActivity_notificationSetting"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/MainActivity_Refresh"
            android:layout_marginEnd="5dp"
            android:background="@color/transparent"
            android:src="@drawable/baseline_notifications_active_black_24"
            android:tint="@color/colorPrimary"
            />

        <ImageButton
            android:id="@+id/MainActivity_logout"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:background="@color/transparent"
            android:src="@drawable/baseline_reply_black_24"
            android:tint="@color/colorPrimary"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/cairobold"
            android:text="الطلبات"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>